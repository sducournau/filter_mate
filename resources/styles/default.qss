/* ScrollBar - Vertical - SCOPED to FilterMate only */
#dockWidgetContents QScrollBar:vertical {
    border: none;
    background: transparent;
    width: 4px;
    cursor: pointer;
}

#dockWidgetContents QScrollBar::handle:vertical {
    border: none;
    background: {color_font_2};
    width: 4px;
    border-radius: 2px;
    min-height: 20px;
    cursor: pointer;
}

#dockWidgetContents QScrollBar::handle:vertical:hover {
    background: {color_font_1};
    cursor: pointer;
}

#dockWidgetContents QScrollBar::handle:vertical:pressed {
    background: {color_accent};
}

#dockWidgetContents QScrollBar::add-line:vertical {
    background: transparent;
    height: 5px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

#dockWidgetContents QScrollBar::sub-line:vertical {
    background: transparent;
    height: 5px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

#dockWidgetContents QScrollBar::add-page:vertical,
#dockWidgetContents QScrollBar::sub-page:vertical {
    background: none;
}

/* ScrollBar - Horizontal - SCOPED to FilterMate only */
#dockWidgetContents QScrollBar:horizontal {
    border: none;
    background: transparent;
    height: 4px;
    margin: 0px;
    cursor: pointer;
}

#dockWidgetContents QScrollBar::handle:horizontal {
    background: {color_font_2};
    min-width: 20px;
    border-radius: 2px;
    margin: 0px;
    cursor: pointer;
}

#dockWidgetContents QScrollBar::handle:horizontal:hover {
    background: {color_font_1};
    cursor: pointer;
}

#dockWidgetContents QScrollBar::handle:horizontal:pressed {
    background: {color_accent};
}

#dockWidgetContents QScrollBar::add-line:horizontal,
#dockWidgetContents QScrollBar::sub-line:horizontal {
    width: 0;
}

#dockWidgetContents QScrollBar::add-page:horizontal,
#dockWidgetContents QScrollBar::sub-page:horizontal {
    background: none;
}

/* ========================================================================
   GROUPBOX - Enhanced styling with better alignment
