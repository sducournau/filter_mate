/* FilterMate Default Stylesheet
 * Modern, clean styling for FilterMate plugin widgets
 * Color scheme: Light theme with neutral colors
 */

/* Variables (will be replaced dynamically from config.json):
 * {color_bg_0} - Frame background (BACKGROUND[0])
 * {color_1} - Primary widget background (BACKGROUND[1])
 * {color_bg_1} - Secondary widget background (BACKGROUND[1], alias for color_1)
 * {color_2} - Selection background (BACKGROUND[2])
 * {color_bg_2} - Tertiary background (BACKGROUND[2], alias for color_2)
 * {color_bg_3} - Hover color (BACKGROUND[3])
 * {color_3} - Text/accent color (FONT[1])
 * {color_font_0} - Primary font color (FONT[0])
 * {color_font_1} - Secondary font color (FONT[1], alias for color_3)
 */

/* ========================================================================
   DOCKWIDGET - Base styling for docked and floating modes
   NOTE: Generic QDockWidget rules REMOVED to prevent affecting other QGIS panels
   FilterMate styling is applied via #dockWidgetContents descendants only
   ======================================================================== */

/* REMOVED 2026-01-21: Generic QDockWidget rules caused style inheritance
   issues with child dialogs (QgsExpressionBuilderDialog displayed incorrectly).
   These rules are now COMMENTED OUT. DO NOT UNCOMMENT.

QDockWidget {
    background-color: {color_bg_0};
    color: {color_font_0};
}

QDockWidget::title {
    background-color: {color_1};
    color: {color_font_0};
    padding: 6px 10px;
    font-weight: 500;
}

QDockWidget > QWidget {
    background-color: {color_bg_0};
}

END OF REMOVED SECTION */

#dockWidgetContents {
    background-color: {color_bg_0};
    padding: 4px;
}

/* ========================================================================
   SPLITTER - Enhanced styling for responsive resizing
   SCOPED to FilterMate only (fixes #issue: affects QGIS dialogs globally)
   ======================================================================== */

#dockWidgetContents QSplitter::handle {
    background-color: {color_2};
    border-radius: 2px;
}

#dockWidgetContents QSplitter::handle:hover {
    background-color: {color_accent};
}

#dockWidgetContents QSplitter::handle:pressed {
    background-color: {color_accent_dark};
}

#dockWidgetContents QSplitter::handle:vertical {
    height: 6px;
    margin: 2px 30px;
}

#dockWidgetContents QSplitter::handle:horizontal {
    width: 6px;
    margin: 30px 2px;
}

/* ========================================================================
   QGIS Widgets - Common Styling with better spacing
   SCOPED to FilterMate only to avoid polluting global QGIS styles
   ======================================================================== */
#dockWidgetContents QgsFeaturePickerWidget,
#dockWidgetContents QgsProjectionSelectionWidget,
#dockWidgetContents QgsMapLayerComboBox,
#dockWidgetContents QgsFieldComboBox,
#dockWidgetContents QgsFieldExpressionWidget,
#dockWidgetContents QgsCheckableComboBox,
#dockWidgetContents QComboBox,
#dockWidgetContents QgsCheckableComboBoxLayer {
    background-color: {color_1};
    border: 1px solid {color_2};
    border-radius: 4px;
    padding: 4px 8px;
    color: {color_font_0};
    min-height: 20px;
    max-height: 20px;
}

#dockWidgetContents QgsFeaturePickerWidget:hover,
#dockWidgetContents QgsProjectionSelectionWidget:hover,
#dockWidgetContents QgsMapLayerComboBox:hover,
#dockWidgetContents QgsFieldComboBox:hover,
#dockWidgetContents QgsFieldExpressionWidget:hover,
#dockWidgetContents QgsCheckableComboBox:hover,
#dockWidgetContents QComboBox:hover,
#dockWidgetContents QgsCheckableComboBoxLayer:hover {
    border: 2px solid {color_accent};
    padding: 2px 4px; /* Adjusted for thicker border */
}

#dockWidgetContents QgsFeaturePickerWidget:focus,
#dockWidgetContents QgsProjectionSelectionWidget:focus,
#dockWidgetContents QgsMapLayerComboBox:focus,
#dockWidgetContents QgsFieldComboBox:focus,
#dockWidgetContents QgsFieldExpressionWidget:focus,
#dockWidgetContents QgsCheckableComboBox:focus,
#dockWidgetContents QComboBox:focus,
#dockWidgetContents QgsCheckableComboBoxLayer:focus {
    border: 3px solid {color_accent}; /* Reduced from 5px to fit in smaller heights */
    background-color: {color_accent_light_bg};
    padding: 0px 2px; /* Minimal padding for focus state */
    outline: none;
    box-shadow: 0 0 0 2px rgba(66, 66, 66, 0.25); /* Reduced external halo */
    /* Enhanced focus ring: 3px border + external halo for accessibility */
}

#dockWidgetContents QgsFeaturePickerWidget QAbstractItemView,
#dockWidgetContents QgsProjectionSelectionWidget QAbstractItemView,
#dockWidgetContents QgsMapLayerComboBox QAbstractItemView,
#dockWidgetContents QgsFieldComboBox QAbstractItemView,
#dockWidgetContents QgsFieldExpressionWidget QAbstractItemView,
#dockWidgetContents QgsCheckableComboBox QAbstractItemView,
#dockWidgetContents QComboBox QAbstractItemView,
#dockWidgetContents QgsCheckableComboBoxLayer QAbstractItemView {
    background-color: {color_bg_0};
    selection-background-color: {color_accent};
    selection-color: white;
    color: {color_font_0};
    border: 1px solid {color_2};
}

/* QgsCheckableComboBox Indicator */
#dockWidgetContents QgsCheckableComboBox::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid {color_2};
    border-radius: 3px;
    background-color: transparent;
}

/* ========================================================================
   INPUT FIELDS - Standardized 20px height
   SCOPED to FilterMate only
   ======================================================================== */

#dockWidgetContents QLineEdit,
#dockWidgetContents QSpinBox,
#dockWidgetContents QDoubleSpinBox {
    min-height: 20px;
    max-height: 20px;
}

#dockWidgetContents QgsCheckableComboBox::indicator:checked {
    background-color: {color_accent};
    border: 2px solid {color_accent_dark};
}

/* ToolBox TabWidget */
/* Note: Removed generic QWidget background to prevent unwanted overrides */
/* Instead, backgrounds are set explicitly on specific widgets */
/* SCOPED to FilterMate only */

#dockWidgetContents QToolBox {
    background-color: {color_bg_0};
    border: none;
    padding: 4px;
}

/* Style pour les onglets du QToolBox */
#dockWidgetContents QToolBox::tab {
    background-color: {color_1};
    border: 1px solid {color_2};
    border-radius: 4px;
    padding: 0;
    margin: 2px;
    color: {color_font_0};
    font-weight: normal;
    min-height: 50px;
    max-height: 50px;
}

/* Style pour les boutons à l'intérieur des onglets - C'EST ICI QU'IL FAUT DÉFINIR LA HAUTEUR */
#dockWidgetContents QToolBox QToolButton {
    background-color: transparent;
    border: none;
    padding: 12px 10px 12px 45px;
    min-height: 50px;
    max-height: 50px;
    height: 50px;
    color: {color_font_0};
    font-weight: normal;
    text-align: left;
}

#dockWidgetContents QToolBox::tab:selected {
    background-color: {color_accent_light_bg};
    color: {color_accent_dark};
    font-weight: 600;
    border: 2px solid {color_accent};
    border-left: 4px solid {color_accent};
}

#dockWidgetContents QToolBox QToolButton:checked {
    background-color: transparent;
    font-weight: 500;
}

#dockWidgetContents QToolBox::tab:hover {
    background-color: {color_2};
    color: {color_font_1};
}

#dockWidgetContents QToolBox QToolButton:hover {
    background-color: transparent;
}

/* DockWidget - REMOVED: Generic rules affected all QGIS dockwidgets
QDockWidget {
    background: {color_bg_0};
    border: 1px solid {color_font_0};
}

QDockWidget::title {
    text-align: left;
    padding: 2px 0 2px 10px;
    background: {color_1};
    color: {color_font_0};
}

QDockWidget::close-button,
QDockWidget::float-button {
