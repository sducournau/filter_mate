{
    "_schema_version": "2.0.0",
    "_description": "FilterMate Configuration - Restructured for clarity and qt_json_view integration",
    
    "GENERAL": {
        "LANGUAGE": {
            "type": "choices",
            "choices": ["auto", "en", "fr", "pt", "es", "it", "de", "nl"],
            "value": "auto"
        },
        "FEEDBACK_LEVEL": {
            "type": "choices",
            "choices": ["minimal", "normal", "verbose"],
            "value": "normal"
        },
        "APP_SQLITE_PATH": {
            "type": "filepath",
            "value": ""
        }
    },
    
    "FEATURES": {
        "ENABLE_UNDO_REDO": {
            "type": "boolean",
            "value": true
        },
        "ENABLE_FILTER_HISTORY": {
            "type": "boolean",
            "value": true
        },
        "ENABLE_EXPORT": {
            "type": "boolean",
            "value": true
        },
        "ENABLE_LAYER_LINKING": {
            "type": "boolean",
            "value": true
        },
        "ENABLE_GEOMETRIC_PREDICATES": {
            "type": "boolean",
            "value": true
        },
        "ENABLE_BUFFER_FILTER": {
            "type": "boolean",
            "value": true
        },
        "ENABLE_ADVANCED_CONFIG": {
            "type": "boolean",
            "value": true
        },
        "AUTO_CURRENT_LAYER": {
            "type": "boolean",
            "value": false
        }
    },
    
    "UI": {
        "PROFILE": {
            "type": "choices",
            "choices": ["auto", "compact", "normal"],
            "value": "auto"
        },
        "ACTION_BAR": {
            "POSITION": {
                "type": "choices",
                "choices": ["top", "bottom", "left", "right"],
                "value": "left"
            },
            "VERTICAL_ALIGNMENT": {
                "type": "choices",
                "choices": ["top", "bottom"],
                "value": "top"
            }
        },
        "ICONS": {
            "SIZE_ACTION": {
                "type": "range",
                "min": 16,
                "max": 48,
                "value": 25
            },
            "SIZE_OTHERS": {
                "type": "range",
                "min": 12,
                "max": 32,
                "value": 20
            }
        },
        "THEME": {
            "MODE": {
                "type": "choices",
                "choices": ["auto", "config", "qgis", "system"],
                "value": "auto"
            },
            "ACTIVE": {
                "type": "choices",
                "choices": ["auto", "default", "dark", "light"],
                "value": "auto"
            }
        },
        "STYLES": {
            "BUTTON": {
                "border_radius": "10px",
                "padding": "10px",
                "background_color": "#F0F0F0",
                "hover_color": "#CCCCCC",
                "pressed_color": "#CCCCCC"
            }
        }
    },
    
    "JSON_VIEW": {
        "THEME": {
            "type": "choices",
            "choices": ["auto", "default", "monokai", "solarized_light", "solarized_dark", "nord", "dracula", "one_dark", "gruvbox"],
            "value": "auto"
        },
        "FONT_SIZE": {
            "type": "range",
            "min": 8,
            "max": 16,
            "value": 9
        },
        "SHOW_ALTERNATING_ROWS": {
            "type": "boolean",
            "value": true
        },
        "EDITABLE_KEYS": {
            "type": "boolean",
            "value": true
        },
        "EDITABLE_VALUES": {
            "type": "boolean",
            "value": true
        },
        "COLUMN_WIDTH_KEY": {
            "type": "range",
            "min": 100,
            "max": 300,
            "value": 180
        },
        "COLUMN_WIDTH_VALUE": {
            "type": "range",
            "min": 150,
            "max": 400,
            "value": 240
        }
    },
    
    "LAYERS": {
        "LINK_LEGEND_LAYERS": {
            "type": "boolean",
            "value": true
        },
        "LAYER_PROPERTIES_COUNT": {
            "type": "range",
            "min": 10,
            "max": 100,
            "value": 35
        },
        "FEATURE_COUNT_LIMIT": {
            "type": "range",
            "min": 1000,
            "max": 100000,
            "value": 10000
        },
        "FEATURE_COUNT_WARNING_THRESHOLD": {
            "type": "range",
            "min": 10000,
            "max": 500000,
            "value": 50000
        }
    },
    
    "EXPORT": {
        "DEFAULT_FORMAT": {
            "type": "choices",
            "choices": ["GPKG", "SHP", "GeoJSON", "CSV", "KML"],
            "value": "GPKG"
        },
        "DEFAULT_CRS": {
            "type": "string",
            "value": "EPSG:4326"
        },
        "STYLE_FORMAT": {
            "type": "choices",
            "choices": ["QML", "SLD", "None"],
            "value": "QML"
        },
        "REMEMBER_LAST_FOLDER": {
            "type": "boolean",
            "value": true
        },
        "LAST_FOLDER": {
            "type": "filepath",
            "value": "",
            "hidden": true
        }
    },
    
    "BACKEND": {
        "PREFERRED_BACKEND": {
            "type": "choices",
            "choices": ["auto", "postgresql", "spatialite", "ogr"],
            "value": "auto"
        },
        "USE_MATERIALIZED_VIEWS": {
            "type": "boolean",
            "value": true
        },
        "SPATIALITE_TEMP_TABLES": {
            "type": "boolean",
            "value": true
        },
        "CONNECTION_TIMEOUT": {
            "type": "range",
            "min": 5,
            "max": 120,
            "value": 30
        }
    },
    
    "ADVANCED": {
        "DEBUG_MODE": {
            "type": "boolean",
            "value": false
        },
        "FRESH_RELOAD_FLAG": {
            "type": "boolean",
            "value": false,
            "hidden": true
        },
        "MAX_HISTORY_SIZE": {
            "type": "range",
            "min": 10,
            "max": 100,
            "value": 50
        },
        "AUTO_SAVE_CONFIG": {
            "type": "boolean",
            "value": true
        }
    },
    
    "LINKS": {
        "GITHUB_PAGE": {
            "type": "url",
            "value": "https://sducournau.github.io/filter_mate/"
        },
        "GITHUB_REPOSITORY": {
            "type": "url",
            "value": "https://github.com/sducournau/filter_mate/"
        },
        "QGIS_PLUGIN_REPOSITORY": {
            "type": "url",
            "value": "https://plugins.qgis.org/plugins/filter_mate/"
        }
    },
    
    "THEMES": {
        "default": {
            "BACKGROUND": ["#F5F5F5", "#FFFFFF", "#E0E0E0", "#2196F3"],
            "FONT": ["#212121", "#616161", "#BDBDBD"],
            "ACCENT": {
                "PRIMARY": "#1976D2",
                "HOVER": "#2196F3",
                "PRESSED": "#0D47A1",
                "LIGHT_BG": "#E3F2FD",
                "DARK": "#01579B"
            }
        },
        "dark": {
            "BACKGROUND": ["#1E1E1E", "#2D2D30", "#3E3E42", "#007ACC"],
            "FONT": ["#EFF0F1", "#D0D0D0", "#808080"],
            "ACCENT": {
                "PRIMARY": "#007ACC",
                "HOVER": "#1E90FF",
                "PRESSED": "#005A9E",
                "LIGHT_BG": "#1E3A5F",
                "DARK": "#003D66"
            }
        },
        "light": {
            "BACKGROUND": ["#FFFFFF", "#F5F5F5", "#E0E0E0", "#2196F3"],
            "FONT": ["#000000", "#424242", "#9E9E9E"],
            "ACCENT": {
                "PRIMARY": "#2196F3",
                "HOVER": "#64B5F6",
                "PRESSED": "#1976D2",
                "LIGHT_BG": "#E3F2FD",
                "DARK": "#0D47A1"
            }
        }
    },
    
    "RUNTIME": {
        "_description": "Runtime state - not user editable",
        "CURRENT_PROJECT": {
            "PROJECT_ID": "",
            "PROJECT_PATH": "",
            "PROJECT_SQLITE_PATH": "",
            "ACTIVE_POSTGRESQL": "",
            "IS_ACTIVE_POSTGRESQL": false
        },
        "EXPORT_STATE": {
            "HAS_LAYERS_TO_EXPORT": false,
            "LAYERS_TO_EXPORT": [],
            "HAS_PROJECTION_TO_EXPORT": false,
            "PROJECTION_TO_EXPORT": "EPSG:4326",
            "HAS_STYLES_TO_EXPORT": false,
            "HAS_OUTPUT_FOLDER_TO_EXPORT": false,
            "OUTPUT_FOLDER_TO_EXPORT": "",
            "HAS_ZIP_TO_EXPORT": false,
            "ZIP_TO_EXPORT": ""
        }
    }
}
